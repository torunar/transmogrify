#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use Transmogrify\ApiException;
use Transmogrify\App;

date_default_timezone_set('UTC');

$exitCode = -1;
try {
    $app = new App($argc, $argv);
    $exitCode = $app->run();
} catch (ApiException $e) {
    $app->getLogger()->dump($e->getMessage(), $e->getData());
} catch (Exception $e) {
    echo $e->getMessage();
}

exit($exitCode);